# Docker Compose infra defaults (works on Windows/macOS/Linux with Docker Desktop/Engine)

GATEWAY_PORT=3000

POSTGRES_DB=tournament_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
POSTGRES_SYNCHRONIZE=true

NATS_PORT=4222
NATS_MONITOR_PORT=8222

# Host port for Kafka clients running on your machine.
# Docker services should use kafka:9092 instead.
KAFKA_EXTERNAL_PORT=9094

# Single-node KRaft cluster id (safe to keep fixed for local/dev usage).
KAFKA_KRAFT_CLUSTER_ID=4L6g3nShT-eMCtK--X86sw
