SHOWCASE_UI_PORT=8080
JWT_SECRET=dev-jwt-secret-change-me
JWT_EXPIRES_IN=1h

POSTGRES_DB=tournament_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
