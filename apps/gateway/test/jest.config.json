{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../..",
  "testRegex": "apps/gateway/src/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/contracts$": "<rootDir>/apps/shared/contracts/index.ts",
    "^@app/contracts/(.*)$": "<rootDir>/apps/shared/contracts/$1",
    "^@app/config$": "<rootDir>/apps/shared/config/index.ts",
    "^@app/config/(.*)$": "<rootDir>/apps/shared/config/$1"
  },
  "collectCoverageFrom": ["apps/gateway/src/**/*.ts"],
  "coverageDirectory": "coverage/gateway",
  "testEnvironment": "node"
}
