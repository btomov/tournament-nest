{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../..",
  "testRegex": "apps/gateway/src/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/apps/gateway/tsconfig.app.json"
      }
    ]
  },
  "moduleNameMapper": {
    "^@app/contracts$": "<rootDir>/apps/shared/contracts/index.ts",
    "^@app/contracts/(.*)$": "<rootDir>/apps/shared/contracts/$1"
  },
  "testEnvironment": "node"
}
