  "scripts": {
    "build": "npm run build:gateway && npm run build:user-service && npm run build:tournament-service",
    "build:gateway": "nest build gateway",
    "build:user-service": "nest build user-service",
    "infra:up": "docker compose up -d postgres nats kafka",
    "infra:down": "docker compose down",
    "infra:logs": "docker compose logs -f",
    "build:tournament-service": "nest build tournament-service",
    "format": "prettier --write \"apps/**/*.ts\" \"README.md\"",
    "start": "npm run start:gateway",
    "start:gateway": "nest start gateway",
    "start:gateway:dev": "nest start gateway --watch",
    "start:user-service": "nest start user-service",
    "start:user-service:dev": "nest start user-service --watch",
    "start:tournament-service": "nest start tournament-service",
    "start:tournament-service:dev": "nest start tournament-service --watch",
    "start:dev": "npm run start:gateway:dev",
    "start:debug": "nest start gateway --debug --watch",
    "start:prod": "node dist/apps/gateway/gateway/src/main.js",
    "lint": "eslint \"apps/**/*.ts\" --fix",
    "test": "npm run test:gateway && npm run test:tournament-service && npm run test:user-service",
    "test:gateway": "jest --config ./apps/gateway/test/jest.config.json",
    "test:tournament-service": "jest --config ./apps/tournament-service/test/jest.config.json",
    "test:user-service": "jest --config ./apps/user-service/test/jest.config.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
